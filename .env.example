# === Core Django Settings ===
DJANGO_SETTINGS_MODULE=config.settings
DJANGO_SECRET_KEY=change-me-to-a-long-random-string-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=*
DJANGO_TIME_ZONE=Asia/Karachi
DJANGO_CSRF_TRUSTED_ORIGINS=https://your.domain.com

# === Database ===
# For PostgreSQL (production):
DATABASE_URL=postgresql://user:pass@host:5432/resultportal
# Or use individual settings:
DB_ENGINE=postgresql
DB_NAME=result_portal
DB_USER=result_portal_user
DB_PASSWORD=change-me-strong
DB_HOST=127.0.0.1
DB_PORT=5432

# For SQLite (development):
# DB_ENGINE=sqlite

# === Google OAuth2 (Workspace SSO) ===
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_WORKSPACE_DOMAIN=pmc.edu.pk
OAUTH_REDIRECT_URI=https://your.domain.com/auth/complete/google-oauth2/
SOCIAL_AUTH_REDIRECT_IS_HTTPS=false

# === Results Portal Domain Restriction ===
RESULTS_ALLOWED_EMAIL_DOMAIN=pmc.edu.pk

# === Feature Flags ===
FEATURE_RESULTS_ONLY=false
ALLOW_PUBLISH=true

# === Observability ===
SENTRY_DSN=

# === Email (optional for notifications) ===
EMAIL_BACKEND=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=notifications@pmc.edu.pk
EMAIL_HOST_PASSWORD=app-password-here

# === Authentication ===
LOGIN_REDIRECT_URL=/
LOGOUT_REDIRECT_URL=/
LOGIN_ERROR_URL=/auth/error